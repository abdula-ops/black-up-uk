{% assign background_rgb = section.settings.background_color | color_to_rgb %}
{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
      [data-section-id="{{ section.id }}"]
      {
          {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
          --color-custom-background: {{ section.settings.background_color }};
          {% endif %}

          {% if section.settings.margin-top %}
              --section-gap-top: {{ section.settings.margin-top }}px;
          {% endif %}

          {% if section.settings.margin-bottom %}
              --section-gap-bottom: {{ section.settings.margin-bottom }}px;
          {% endif %}

          {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
            --color-custom-text: {{ section.settings.color-body-text }};
          {% endif %}
      }

  {%- for block in section.blocks -%}
      [data-block-id="{{ block.id }}"]
      {
            --font-headline-scale-desk: {{ block.settings.size_heading | divided_by: 100.0 }};

            --font-headline-scale: {{ block.settings.size_heading_mobile | divided_by: 100.0 }};

      }
  {%- endfor -%}

  /* Styles pour "Lire la suite" */
  .rich-text-content-wrapper {
    position: relative;
  }

  .rich-text-content {
    position: relative;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }

  .rich-text-content.collapsed {
    max-height: 4.5em; /* Environ 3 lignes */
    line-height: 1.5em;
  }

  .rich-text-content.collapsed::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 3em;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 1) 100%);
    pointer-events: none;
  }

  /* Pour les fonds colorés */
  {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
  .rich-text-content.collapsed::after {
    {% assign r = background_rgb | split: '(' | last | split: ',' | first %}
    {% assign g = background_rgb | split: ',' | slice: 1, 1 | first %}
    {% assign b = background_rgb | split: ',' | slice: 2, 1 | first %}
    background: linear-gradient(to bottom, 
      rgba({{ r }}, {{ g }}, {{ b }}, 0) 0%, 
      rgba({{ r }}, {{ g }}, {{ b }}, 0.8) 50%, 
      rgba({{ r }}, {{ g }}, {{ b }}, 1) 100%);
  }
  {% endif %}

  .read-more-btn {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.5rem 1rem;
    background: transparent;
    border: none;
    color: var(--color-custom-text, inherit);
    text-decoration: underline;
    cursor: pointer;
    font-size: inherit;
    transition: opacity 0.2s ease;
  }

  .read-more-btn:hover {
    opacity: 0.7;
  }

  .read-more-btn.hidden {
    display: none;
  }
</style>

<div
  data-section-id="{{ section.id }}"
  class="{% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %} rich-text"
>
  <div class="hero__wrapper">
    {% assign classname = '' %}
    {% if section.settings.section_width == 'short' %}
      {% assign classname = 'rich-text--short' %}
    {% endif %}

    <div class="hero {{ classname }}" style="text-align: {{ section.settings.desktop_text_horizontal_position }};">
      <div class="hero__text-content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              {% unless block.settings.disable_on_mobile and settings.disabled_animations_on_mobile %}
                <h2 data-block-id="{{ block.id }}" class="hero__headline">
                  {{ block.settings.heading }}
                </h2>
              {% endunless %}
            
            {%- when 'text' -%}
              {% unless block.settings.disable_on_mobile and settings.disabled_animations_on_mobile %}
                <div class="rich-text-content-wrapper">
                  <div class="rich-text-content collapsed" id="rich-text-{{ section.id }}">
                    {{ block.settings.text }}
                  </div>
                  {% if section.settings.show_read_more %}
                    <button class="read-more-btn" onclick="toggleReadMore('{{ section.id }}')">
                      {{ section.settings.read_more_text }}
                    </button>
                  {% endif %}
                </div>
              {% endunless %}
            
            {%- when 'button' -%}
              {% unless block.settings.disable_on_mobile and settings.disabled_animations_on_mobile %}
                <div class="hero__button">
                  <a href="{{ block.settings.button_link }}" class="button button--{{ block.settings.button_select }}">
                    {{ block.settings.button_label }}
                  </a>
                </div>
              {% endunless %}
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

<script>
  function toggleReadMore(sectionId) {
    const content = document.getElementById('rich-text-' + sectionId);
    const button = content.parentElement.querySelector('.read-more-btn');
    
    if (content.classList.contains('collapsed')) {
      content.classList.remove('collapsed');
      content.style.maxHeight = content.scrollHeight + 'px';
      button.textContent = '{{ section.settings.read_less_text }}';
    } else {
      content.classList.add('collapsed');
      content.style.maxHeight = '4.5em';
      button.textContent = '{{ section.settings.read_more_text }}';
    }
  }

  // Vérifier si le texte dépasse 3 lignes au chargement
  document.addEventListener('DOMContentLoaded', function() {
    const content = document.getElementById('rich-text-{{ section.id }}');
    if (content) {
      const wrapper = content.parentElement;
      const button = wrapper.querySelector('.read-more-btn');
      
      // Temporairement enlever la classe collapsed pour mesurer la hauteur réelle
      content.classList.remove('collapsed');
      const fullHeight = content.scrollHeight;
      content.classList.add('collapsed');
      const collapsedHeight = content.scrollHeight;
      
      // Si le contenu ne dépasse pas 3 lignes, cacher le bouton
      if (fullHeight <= collapsedHeight + 10) {
        content.classList.remove('collapsed');
        if (button) button.classList.add('hidden');
      }
    }
  });
</script>

