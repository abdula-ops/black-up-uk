{% assign background_rgb = section.settings.background_color | color_to_rgb %}
{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-background: {{ section.settings.background_color }};
    {% endif %}
    {% if section.settings.margin-top %}
      --section-gap-top: {{ section.settings.margin-top }}px;
    {% endif %}
    {% if section.settings.margin-bottom %}
      --section-gap-bottom: {{ section.settings.margin-bottom }}px;
    {% endif %}
  }

  [data-section-id="{{ section.id }}"] {
    {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-custom-text: {{ section.settings.color-body-text }};
      --color-price: {{ section.settings.color-body-text }};
      --color-brand: {{ section.settings.color-body-text }};
    {% endif %}
    {% if section.settings.enable_stack_products %}
      --grid-col-mobile:{{ section.settings.number_of_column_mobile | floor }};
      --grid-col:{{ section.settings.number_of_column_desktop | floor }};
      --grid-gap: {{ section.settings.spacing_desktop }}px;
    {% endif %}
  }

  /* ===== CTA sous le slider (mêmes styles que les onglets) ===== */
  [data-section-id="{{ section.id }}"] .collection-tab-cta {
    display: flex;
    justify-content: center;
    margin-top: 40px; /* préférence globale */
  }

  /* On réutilise la classe des onglets pour garder exactement le même look */
  [data-section-id="{{ section.id }}"] .collection-tab-cta .collection-tab-title {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 10px 20px;
    border: 1px solid #000;
    border-radius: 50px;
    min-width: 200px;
    text-align: center;
    text-decoration: none;
    cursor: pointer;
    text-transform: uppercase; /* préférence globale */
    font-weight: 600;
  }

  /* Variante remplie : fond noir + texte blanc pour bien ressortir */
  [data-section-id="{{ section.id }}"] .collection-tab-cta .collection-tab-title.is-filled {
    background: #000;
    color: #fff;
    border-color: #000;
  }

  [data-section-id="{{ section.id }}"] .collection-tab-cta .collection-tab-title.is-filled:hover {
    opacity: .9;
  }
</style>

