<script>
  (function() {
    var sectionRoot = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!sectionRoot) return;

    // ✅ Ne cible QUE les onglets (dans .collection-container + possèdent data-attr)
    var swatchHolders = sectionRoot.querySelectorAll('.collection-container .collection-tab-title[data-attr]');
    var containers = sectionRoot.querySelectorAll('slideshow-section');
    var ctaLink = sectionRoot.querySelector('#tab-view-all-{{ section.id }}');

    function updateCtaFromTab(tabEl) {
      if (!ctaLink || !tabEl) return;
      var url = tabEl.getAttribute('data-url');
      if (url) ctaLink.setAttribute('href', url);
    }

    // Init : prendre l’onglet actif (vraie barre d’onglets, pas le CTA)
    var activeTab = sectionRoot.querySelector('.collection-container .collection-tab-title.active') || swatchHolders[0];
    updateCtaFromTab(activeTab);

    // Gestion du clic sur chaque onglet
    swatchHolders.forEach(function(swatch) {
      swatch.addEventListener('click', function() {
        var collectionTabClicked = swatch.getAttribute('data-attr');
        if (!collectionTabClicked) return; // garde-fou (au cas où)

        // Activer l’onglet
        swatchHolders.forEach(function(tab){ tab.classList.remove('active'); });
        swatch.classList.add('active');

        // Afficher le bon slider
        containers.forEach(function(container){ container.classList.remove('active'); });
        var displayElement = sectionRoot.querySelector('#' + CSS.escape(collectionTabClicked));
        if (displayElement) displayElement.classList.add('active');

        // Mettre à jour l’URL du CTA
        updateCtaFromTab(swatch);
      });
    });
  })();
</script>

