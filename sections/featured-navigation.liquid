{% assign background_rgb = section.settings.background_color | color_to_rgb %}
{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
    [id="shopify-section-{{ section.id }}"]
    {
      {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
        --color-background: {{ section.settings.background_color }};
      {% endif %}

      {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
        --color-custom-text: {{ section.settings.color-body-text }};
      {% endif %}
    }

    [data-section-id="{{ section.id }}"]
    {
        {% if section.settings.margin-top %}
            --section-gap-top: {{ section.settings.margin-top }}px;
        {% endif %}

        {% if section.settings.margin-bottom %}
            --section-gap-bottom: {{ section.settings.margin-bottom }}px;
        {% endif %}

    }

    /* --- NOUVELLE REGLE CSS POUR LARGEUR FIXE AVEC "..." --- */
  [data-section-id="{{ section.id }}"] .secondary-navigation__link {
    display: inline-block;   /* Important pour appliquer width et rester en ligne */
    width: 180px;          /* <-- **AJUSTEZ CETTE LARGEUR FIXE** selon vos besoins ! */

    /* Les 3 lignes suivantes gèrent le texte trop long avec "..." */
    white-space: nowrap;     /* Empêche le texte de passer à la ligne */
    overflow: hidden;        /* Cache le texte qui dépasse de la largeur définie */
    text-overflow: ellipsis; /* Affiche les "..." à la place du texte caché */

    text-align: center;      /* Centre le texte (ou ce qu'il en reste) dans le bouton */
    vertical-align: middle;  /* Aide à bien aligner les boutons verticalement sur la même ligne */

    /* Optionnel : Ajoutez un padding minimal si vous le souhaitez,
       maintenant que l'autre padding a été enlevé.
       Exemple : padding: 8px 15px; (8px haut/bas, 15px gauche/droite)
       Assurez-vous que ce padding ne recrée pas le problème précédent.
    */
    /* padding: 8px 15px; */
  }
  /* --- FIN DE LA NOUVELLE REGLE CSS --- */
</style>

<script src="{{ 'secondary-nav.js' | asset_url }}" defer="defer"></script>

<div data-section-id="{{ section.id }}">
  {% render 'headline', title: section.settings.heading | newline_to_br %}

  <secondary-nav>
    <div class="secondary-navigation">
      <ul class="secondary-navigation__ul {% if section.settings.desktop_placement == 'center' %}center{% endif %}">
        {% assign nav = section.settings.menu %}

        {% for link in linklists[nav].links %}
          <!-- menu content -->
          <li>
            <a
              href="{{ link.url }}"
              aria-label="{{ link.title }}"
              class="hero__button--primary hero__button--secondary secondary-navigation__link"
            >
              {{ link.title }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </secondary-nav>
</div>

{% schema %}
{
  "name": "t:sections.featured-navigation.name",
  "tag": "section",
  "class": "spaced-section wt-featured-nav",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "default": "Featured Navigation",
      "label": "t:sections.settings.settings.heading.label"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "t:sections.header.settings.menu.label"
    },
    {
      "type": "select",
      "id": "desktop_placement",
      "options": [
        {
          "value": "left",
          "label": "t:sections.multicolumn.settings.column_alignment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.multicolumn.settings.column_alignment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.featured_navigation.settings.desktop_placement.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.colors",
      "info": "t:sections.global.colors-info"
    },
    {
      "type": "color",
      "id": "color-body-text",
      "default": "transparent",
      "label": "t:sections.settings.settings.text-color.label"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "transparent",
      "label": "t:sections.settings.settings.background-color.label"
    },
    {
      "type": "header",
      "content": "t:sections.global.section_spacing"
    },
    {
      "type": "range",
      "id": "margin-top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "t:sections.settings.settings.distance-top.label"
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "t:sections.settings.settings.distance-bottom.label",
      "info": "t:sections.settings.settings.distance-bottom.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.featured-navigation.name",
      "blocks": []
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}
